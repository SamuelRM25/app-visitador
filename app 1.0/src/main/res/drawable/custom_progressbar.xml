<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo de la barra de progreso -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#E0E0E0" />
        </shape>
    </item>
    <!-- Progreso secundario (opcional, no usado en este caso) -->
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#80CBC4" /> <!-- Color un poco más oscuro para el progreso secundario -->
        </shape>
    </item>
    <!-- Progreso principal -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <!-- Color por defecto del progreso (se puede cambiar con tint programáticamente) -->
                <solid android:color="#4CAF50" />
            </shape>
        </clip>
    </item>
</layer-list>
